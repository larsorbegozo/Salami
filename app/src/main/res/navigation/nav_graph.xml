<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuLangFragment">

    <fragment
        android:id="@+id/menuLangFragment"
        android:name="com.larsorbegozo.salami.view.MenuLangFragment"
        android:label="fragment_menu_lang"
        tools:layout="@layout/fragment_menu_lang" >
        <action
            android:id="@+id/action_menuLangFragment_to_learnFragment"
            app:destination="@id/learnFragment" />
    </fragment>
    <fragment
        android:id="@+id/learnFragment"
        android:name="com.larsorbegozo.salami.view.LearnFragment"
        android:label="fragment_learn"
        tools:layout="@layout/fragment_learn" >
        <argument
            android:name="langID"
            app:argType="integer" />
    </fragment>
</navigation>